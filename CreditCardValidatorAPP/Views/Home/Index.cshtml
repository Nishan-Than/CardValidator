@{
    ViewData["Title"] = "Home Page";
}
<style>
.card-form{
    display:flex;
    flex-direction: column;
}
.card-form input{
    background: whitesmoke;
    padding: 7px;
    border: none;
    width: 20%;
    margin: 12px 0;
    border-radius: 3px;
}

.cardbtn-area .button{
    background: navy;
    color: white;
    padding: 7px;
    width: 10%;
    border: none;
    border-radius: 3px;
}
#message{
    background: thistle;
    padding: 8px;
    border-radius: 3px;
    margin-left: 10px;
    width: 15%;
    color: purple;
    display: inline-block;
}

</style>


<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<div class="card-form">
    <label>Card Number: </label>
    <input type="text" id="cardNo" />
    <div class="cardbtn-area">
        <input type="button" value="Verify" class="button" onclick="validate()" />
        <span id="message" style="success" hidden>Card Verified.</span>
    </div> 
</div>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.0.3.min.js"></script>
<script src="~/js/validator.js"></script>
